@model IEnumerable<Vitta.Models.Usuario>

@{
    ViewData["Title"] = "Início";
}

<div class="text-center mb-4">
    <h1 class="text-primary fw-bold">Vitta</h1>
</div>

@if (TempData["MensagemSucesso"] != null) {
    <div class="alert alert-success text-center">@TempData["MensagemSucesso"]</div>
}

@if (TempData["MensagemErro"] != null) {
    <div class="alert alert-danger text-center">@TempData["MensagemErro"]</div>
}

<div class="row justify-content-center">
    <!-- Formulário -->
    <div class="col-md-5">
        <div class="card shadow-sm p-4 mb-4">
            <h4 class="text-secondary mb-3">Cadastrar Usuário</h4>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input name="Nome" class="form-control" placeholder="Digite o nome" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="Email" type="email" class="form-control" placeholder="exemplo@email.com" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Objetivo</label>
                    <input name="Objetivo" class="form-control" placeholder="Ex: melhorar alimentação" />
                </div>

                <button type="submit" class="btn btn-success w-100">Cadastrar</button>
            </form>
        </div>
    </div>

